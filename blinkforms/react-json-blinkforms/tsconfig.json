{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "esnext",
        "importHelpers": true,
        "target": "es5",
        "jsx": "react",
        "lib": ["es5", "es6", "dom"],
        "baseUrl": "./",
        "paths": {
            "@blinkforms/core": ["typescript-core"],
        }
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
